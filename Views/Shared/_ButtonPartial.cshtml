@model int

<div>
    <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-primary" asp-route-id="@Model"><i class="fa-solid fa-pen-to-square"></i></a>
    <a asp-action="Details" asp-controller="ProductTypes" class="btn btn-success" asp-route-id="@Model"><i class="fa-solid fa-file-lines"></i></a>
    <form asp-action="Delete" asp-controller="ProductTypes" asp-route-id="@Model" method="post" style="display:inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
            <i class="fa-solid fa-trash"></i>
        </button>
    </form>

</div>


