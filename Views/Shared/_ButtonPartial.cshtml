@model Tuple<int, string>
@{
    var id = Model.Item1;
    var controller = Model.Item2;
}

<div>
    <a asp-action="Edit" asp-controller="@controller" class="btn btn-primary" asp-route-id="@id"><i class="fa-solid fa-pen-to-square"></i></a>
    <a asp-action="Details" asp-controller="@controller" class="btn btn-success" asp-route-id="@id"><i class="fa-solid fa-file-lines"></i></a>
    <form asp-action="Delete" asp-controller="@controller" asp-route-id="@id" method="post" style="display:inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
            <i class="fa-solid fa-trash"></i>
        </button>
    </form>

</div>


