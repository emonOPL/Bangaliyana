@model Bangaliyana.Models.SpecialTags

@{
    ViewData["Title"] = "Specail Tag Details";
}

<div class="p-4 border border-info rounded-2 w-75 mx-auto shadow">
    <h3 class="text-center text-info">Specail Tag Details</h3><br />

    <form>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-10">
                <input asp-for="SpecialTag" readonly="readonly" class="form-control" />
                <span asp-validation-for="SpecialTag" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="Description"></label>
            </div>
            <div class="col-10">
                <input asp-for="Description" readonly="readonly" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-2"></div>
            <div class="col-10">
                <a asp-action="Edit" asp-route-id=@Model.Id class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
