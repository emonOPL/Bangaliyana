@model Bangaliyana.Models.Products

@{
    ViewData["Title"] = "Add New Product";
}

<div class="p-4 border border-info rounded-2 w-75 mx-auto shadow">
    <h3 class="text-center text-info">Add New Product</h3><br />

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="Name"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="Description"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="Price"></label>
            </div>
            <div class="col-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="ImageUrl"></label>
            </div>
            <div class="col-10">
                <input asp-for="ImageUrl" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-10">
                <input asp-for="IsAvailable" type="checkbox"/>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="ProductTypeId"></label>
            </div>
            <div class="col-10">
                <input asp-for="ProductTypeId" class="form-control" />
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <div class="col-2 text-end">
                <label asp-for="SpecialTagId"></label>
            </div>
            <div class="col-10">
                <input asp-for="SpecialTagId" class="form-control" />
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-2"></div>
            <div class="col-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
